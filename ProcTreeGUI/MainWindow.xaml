<mui:ModernWindow x:Class="ProcTreeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Дропни процедуры" IsTitleVisible="True"
        ContentSource="/Pages/Home.xaml">
   
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup>
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Поиск" Source="/Pages/Home.xaml" />
                <mui:Link DisplayName="Скрипт" Source="/Pages/Script.xaml"></mui:Link>
                <mui:Link DisplayName="SQL ⇆ Код" Source="/Pages/SqlToCode.xaml"></mui:Link>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Настройки" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Настройки" Source="/Pages/SettingsPage.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
